{
  "productName": "whytchat-desktop",
  "version": "0.2.9",
  "identifier": "ai.whytcard.whytchat",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi", "deb", "appimage", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      },
      "entitlements": null,
      "exceptionDomain": ""
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Whytchat",
        "width": 1024,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "visible": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
